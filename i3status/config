# install awesome fonts for the icons

general {
    output_format = "i3bar"
    colors = true
    color_good = "#00D300"
    color_degraded = "#CECE00"
    color_bad = "#BC0000"
    interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "tztime local"

wireless _first_ {
    format_up = "NET %ip"
    format_down = "wifi down"
}

battery all {
    format = "%status %percentage %remaining"
    status_chr = "CHR"
    status_bat = "BAT"
    status_full = "FUL"
}

volume master {
    format = "VOL %volume"
    format_muted = "muted"
}

tztime local {
    format = "%A %Y-%m-%d %H:%M"
}

cpu_usage {
    format = "CPU %usage"
}

cpu_temperature 0 {
    format = "TMP %degreesÂ°C"
}
